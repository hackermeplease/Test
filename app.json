{
  "name": "test",
  "logo": "https://avatars.githubusercontent.com/u/176591771?v=4",
  "success_url": "/",
  "stack": "container",
  "env": {
    "PORT": {
      "description": "Port to run the application",
      "required": true,
      "value": "7860"
    },
    "SESSION_ID": {
      "description": "Session ID for bot persistence",
      "required": true,
      "value": "Session~"
    },
    "BOT_INFO": {
      "description": "Bot metadata and thumbnail",
      "required": true,
      "value": ";https://raw.githubusercontent.com/betingrich4/test/master/media/images/thumb.jpg"
    },
    "SUDO": {
      "description": "Admin phone numbers (comma-separated with country codes)",
      "required": true,
      "value": "254740007567,254790375710"
    },
    "AUTHOR": {
      "description": "Default sticker author name",
      "required": false,
      "value": "Marisel"
    },
    "PACKNAME": {
      "description": "Default sticker pack name",
      "required": false,
      "value": "Test"
    },
    "AUTO_READ": {
      "description": "Enable auto-read messages (true/false)",
      "required": false,
      "value": "false"
    },
    "RMBG_KEY": {
      "description": "Remove.bg API key (leave empty to disable)",
      "required": false,
      "value": ""
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "13"
      }
    }
  ]
}
